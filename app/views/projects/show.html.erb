<p style="color: green"><%= notice %></p>

<div class="container text-center">

    <div class="card" style="width: 70rem;">
        <div class="card-body">
            <h2 class="card-title"><%= @project.project_name %></h2>
            <h5 class="card-subtitle mb-2 text-body-secondary"><%= @project.project_description %></h5>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"></li>

                <li class="list-group-item">
                    <h2>Status : Current</h2>
                </li>

                <li class="list-group-item">
                    <h2>Budget : $<%= @project.budget_amount %>0, Remaining : $<%= @project.budget_amount-10000.00 %>0 ($10000.00 used)</h2>
                </li>

                <div class="container text-center">
                  <div class="row">

                    <div class="col">
                      <h4><%= link_to "Project Breakdown", controller: "milestones", action: "index", id: @project.id %></h4>
                    </div>

                    <div class="col">
                      <h4><%= link_to "Back to projects", projects_path %></h4>
                    </div>


                  </div>
                </div>
               


            </ul>
        </div>
    </div>
</div>

</div>
