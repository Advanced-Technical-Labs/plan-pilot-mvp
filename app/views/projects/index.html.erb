<p style="color: green"><%= notice %></p>



<div>

<p class="h2 pb-2 mb-4 text-primary-emphasis border-bottom border-primary-emphasis" style="text-align: center"> Current Projects / Status </p>

<% current_user.whereis = "project" %>
<% current_user.save %>

<% current_user.memberships.each do |membership| %>

    <% project_data = Project.find(membership.project_id) %>

 

    <div class="container text-center">

        <% if project_data.status.downcase == "current" %>
            <div class="alert alert-success" role="alert">
        <% elsif project_data.status.downcase == "at risk" %>
            <div class="alert alert-warning" role="alert">
        <% end %>



            <div class="row">
                <div class="col">

                       <h4><%= project_data.project_name %></h4>
      
                </div>
                <div class="col">

                    <h4>Status: <%= project_data.status %></h4>
                
                </div>
                    <div class="col">

                        <h4><%= link_to raw("<i class='fa-regular fa-clipboard fa-lg'></i>"), controller: "projects", action: "show", id: project_data.id %></h4>
      
                    </div>


                </div>
            </div>
        </div>


    <% end %>

</div>
